<Window x:Class="JewelryShop.ModalViews.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JewelryShop.ModalViews"
        Title="Товар" Height="550" Width="400" WindowStartupLocation="CenterOwner" Background="#f6f9fc">
    <Border Padding="20" Background="White" BorderBrush="#e0e0e0" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Наименование" Margin="0,0,0,5"/>
            <TextBox x:Name="NameBox"/>

            <TextBlock Text="Категория" Margin="0,10,0,5"/>
            <TextBox x:Name="CategoryBox"/>

            <TextBlock Text="Материал" Margin="0,10,0,5"/>
            <TextBox x:Name="MaterialBox"/>

            <TextBlock Text="Проба" Margin="0,10,0,5"/>
            <TextBox x:Name="PurityBox"/>

            <TextBlock Text="Вес (г)" Margin="0,10,0,5"/>
            <TextBox x:Name="WeightBox"/>

            <TextBlock Text="Цена (₽)" Margin="0,10,0,5"/>
            <TextBox x:Name="PriceBox"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Width="100" Click="Save_Click"/>
                <Button Content="Отмена" Width="100" Background="#cccccc" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
